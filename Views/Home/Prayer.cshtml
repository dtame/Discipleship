@model WandaWebAdmin.Models.ViewModels.PrayerRequestViewModel
@{
    ViewData["Title"] = "Prayer";
}

<h2>Envoyer un sujet de prière</h2><hr />
<form method="post" action="Prayer">
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Mon courriel</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="From" name="From" placeholder="Mon courriel">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Sujet</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Subject" name="Subject" placeholder="Sujet">
        </div>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Détail de ma requête</label>
        <textarea class="form-control" id="Body" name="Body" rows="5"></textarea>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </div>
    </div>
</form>

